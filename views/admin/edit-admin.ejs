<%- include('../includes/head.ejs') %>
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <main>

        <div class=" container form-group col-md-5">
            <br>
            <h4>Edit student information</h4>
            <br>

            <form action="/update-admin/<%= admin._id %>" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name="firstName" value="<%= admin.firstName %>">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="lastName" value="<%= admin.lastName %>">
                </div>
                <div class="form-group">
                    <input type="email" class="form-control" name="email" value="<%= admin.email %>">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="userId" value="<%= admin.userId %>">
                </div>

                <button type="submit" class="btn btn-success">Update</button>
                <a class="btn btn-light" href="/delete-admin/<%= admin._id %>" style="text-align:center">Delete</a>
                <a class="btn btn-light" href="/admin-list" style="text-align:center">Cancel</a>

            </form>
        </div>



    </main>